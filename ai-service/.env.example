# DevGuardian AI Service - Environment Configuration Template

# Service Configuration
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production
DEBUG=false

# Redis
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=info
STRUCTURED_LOGGING=true

# AI Model Configuration
MODEL_PATH=/app/models
MODEL_VERSION=v1.0
MAX_CONCURRENT_REQUESTS=10

# Security - IMPORTANT
SECRET_KEY=your_secret_key_here
CORS_ORIGINS=http://localhost:3000

# API Authentication (optional)
# Set to require authentication for scan endpoints
SCANNER_API_KEY=your_scanner_api_key_here

# Pentesting - DISABLED BY DEFAULT
# Enable ONLY with explicit authorization
# PENTESTING_ENABLED=false
# PENTESTING_API_KEY=your_pentest_api_key

# Audit Logging
AUDIT_LOG_FILE=/tmp/devguardian_audit.log

# External APIs - DISABLED BY DEFAULT FOR SECURITY
# Code is NEVER sent to external APIs unless explicitly enabled
# ALLOW_EXTERNAL_APIS=false

# Ollama (local AI - RECOMMENDED)
OLLAMA_HOST=http://localhost:11434

# Legacy API keys (only used if ALLOW_EXTERNAL_APIS=true)
# OPENAI_API_KEY=your_openai_api_key
# CLAUDE_API_KEY=your_claude_api_key

# Performance
WORKER_PROCESSES=4
MAX_REQUESTS_PER_WORKER=1000
REQUEST_TIMEOUT=300

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30
